<%= form_with model: kitten do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    
    <div>
        <%= f.label :age, "Age (in cat years)" %>
        <%= f.number_field :age, in: 1..35 %>
    </div>

    <div>
        <%= f.label :cuteness %>
        <%= f.range_field :cuteness, in: 1..10 %>
    </div>

    <div>
        <%= f.label :softness %>
        <%= f.range_field :softness, in: 1..10 %>
    </div>

    <%= f.submit %>
<% end %>